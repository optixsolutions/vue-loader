  "dependencies": {
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-loader": "^8.0.2",
    "babel-plugin-istanbul": "^5.0.1",
    "cross-env": "^5.2.0",
    "expect": "^23.6.0",
    "jsdom": "^12.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0",
    "mocha-webpack": "^1.1.0",
    "nyc": "^13.0.1",
    "vue-loader": "^15.4.1",
    "vue-template-compiler": "^2.5.17",
